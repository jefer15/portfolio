---
import GitHub from "../icons/GitHub.astro";
import Link from "../icons/Link.astro";
import LinkButton from "../utils/LinkButton.astro";

const { image, title, description, tags, link, githubFront, githubBack } =
  Astro.props;
---

<div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-hidden rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
        <img 
        alt={title} 
        class="object-cover w-full h-48 transition duration-300 md:h-56" 
        loading="lazy" 
        src={image} 
      />
    </div>
  </div>
  

<div class="w-full md:w-1/2 md:max-w-lg">
  <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
    {title}
  </h3>
  <div class="flex flex-wrap mt-2">
    <ul class="flex flex-wrap mb-2 gap-2">
      {
        tags.map((tag: { name: string; class: string; icon: any }) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))
      }
    </ul>

    <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
    <footer class="flex flex-wrap items-end justify-start mt-4 gap-4">
      {
        githubFront && (
          <LinkButton href={githubFront}>
            <GitHub class="size-6" />
            Frontend
          </LinkButton>
        )
      }
      {
        githubBack && (
          <LinkButton href={githubBack}>
            <GitHub class="size-6" />
            Backend
          </LinkButton>
        )
      }
      {
        link && (
          <LinkButton href={link}>
            <Link class="size-4" />
            Preview
          </LinkButton>
        )
      }
    </footer>
  </div>
</div>
