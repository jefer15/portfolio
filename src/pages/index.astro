---
import Layout from "../layouts/Layout.astro"
import Briefcase from "../components/icons/Briefcase.astro"
import CodeIcon from "../components/icons/Code.astro"
import Experience from "../components/Experience.astro"
import Projects from "../components/Projects.astro"
import SectionContainer from "../components/SectionContainer.astro"
import Hero from "../components/Hero.astro"
import TitleSection from "../components/TitleSection.astro"
import EducationIcon from "../components/icons/Education.astro"
import Education from "../components/Education.astro"
import ProfileCheck from "../components/icons/ProfileCheck.astro"
import AboutMe from "../components/AboutMe.astro"
import "../styles/global.css"
import Tool from "../components/icons/Tool.astro"
import Technologies from "../components/Technologies.astro"
---

<Layout
  title="Portafolio | Jeferson Rolón"
  description="Desarrollador web fullstack con más de 2 años de experiencia en el desarrollo de aplicaciones web."
>
  <main class="px-4">
    <SectionContainer id="inicio" class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24">
    <SectionContainer id="educacion">
      <TitleSection>
        <EducationIcon class="size-8" />
        Educación
      </TitleSection>
      <Education />
    </SectionContainer>

    <SectionContainer id="experiencia">
      <TitleSection>
        <Briefcase class="size-8" />
        Experiencia laboral
      </TitleSection>
      <Experience />
    </SectionContainer>

    <SectionContainer id="tecnologias">
      <TitleSection>
        <Tool class="size-7" />
        Tecnologías
      </TitleSection>
      <Technologies />
    </SectionContainer>
    
    <SectionContainer id="proyectos">
      <TitleSection>
        <CodeIcon class="size-7" />
        Proyectos
      </TitleSection>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <TitleSection>
        <ProfileCheck class="size-8" />
        Sobre mí
      </TitleSection>
      <AboutMe />
    </SectionContainer>
  </div>
  </main>
</Layout>
